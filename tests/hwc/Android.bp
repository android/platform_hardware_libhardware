package {
    // A large-scale-change added 'default_applicable_licenses' to import
    // the below license kinds from "hardware_libhardware_license":
    //   SPDX-license-identifier-Apache-2.0
    default_applicable_licenses: ["hardware_libhardware_license"],
}

cc_library_static {
    name: "libcnativewindow",
    srcs: [
        "cnativewindow.c",
        "util.c",
    ],
    cflags: [
        "-Wall",
        "-Werror",
        "-Wno-unused-parameter",
    ],
    shared_libs: [
        "libEGL",
        "libGLESv2",
        "libdl",
        "libhardware",
        "libnativewindow",
    ],
}

cc_binary {
    name: "hwc-test-arrows",
    srcs: ["test-arrows.c"],
    static_libs: ["libcnativewindow"],
    shared_libs: [
        "libEGL",
        "libGLESv2",
        "libdl",
        "libhardware",
        "libnativewindow",
    ],
    cflags: [
        "-DGL_GLEXT_PROTOTYPES",
        "-Wall",
        "-Werror",
    ],
}
